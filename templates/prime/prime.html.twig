{% extends 'base.html.twig' %}

{% block title %}Edit Prime
{% endblock %}

{% block body %}
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">
				Modifier les parametres de prime
			</h6>
		</div>
		<div class="card-body">
			<div class='container'>
				<div style='width:70% ;float:left;border-right: 1px solid gray;padding-right:10px;'>
					{{ include('prime/_form.html.twig', {'button_label': 'Modifier',}) }}
				</div>
				<div style='width:30%;float:left;'>
					<table style=" margin-top: 10%;margin-left:5%; width:100%;height:30vh " >
						<tr >
							<th>
                                PR:
							</th>
							<td>
                                {{prime.PRBrute * prime.note / 20}}
							</td>
							<td></td>
						</tr>
						<tr>
							<th>
                                PRC:
							</th>
							<td>
                                {{((prime.PRBrute * prime.note / 20) / 3) + prime.PRBrute *2/3  }}
							</td>
						</tr>
						<tr>
							<th>
                                PRC+PR:
							</th>
							<td>
                                {{   (((prime.PRBrute * prime.note / 20) / 3) + prime.PRBrute *2/3) + (prime.PRBrute * prime.note / 20)  }}
							</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
