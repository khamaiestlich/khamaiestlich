{% extends 'base.html.twig' %}

{% block title %}Worker{% endblock %}

{% block body %}
    <h1>employée</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ worker.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ worker.Nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ worker.Prenom }}</td>
            </tr>
            
            <tr>
                <th>Matricule</th>
                <td>{{ worker.ref }}</td>
            </tr>
            <tr>
                <th>Situation</th>
                <td>{{ worker.type }}</td>
            </tr>
            <tr>
                <th>Nombre des attestations de travaille</th>
                <td>{{ worker.workCertificates | length }}</td>
            </tr>
            <tr>
                <th>Nombre des attestations de salaire</th>
                <td>{{ worker.salaryCertificates | length }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_worker_index') }}">Retour</a>

    <a href="{{ path('app_worker_edit', {'id': worker.id}) }}">Modifier</a>

    {{ include('worker/_delete_form.html.twig') }}
{% endblock %}
